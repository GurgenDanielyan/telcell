<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.telcell.movie.main.movies.CalculateHeighFromWidthVodPosterIV
            android:id="@+id/bannerImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

    </FrameLayout>

    <TextView
        android:id="@+id/vodBannerNameTV"
        style="@style/white_text_style_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vod_thumbnail_title_top"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="BlaBlaBla" />

    <TextView
        android:id="@+id/vodBannerYearTV"
        style="@style/secondary_text_style_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vod_thumbnail_title_top"
        tools:text="2020" />

</LinearLayout>

